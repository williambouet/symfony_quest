{% extends 'base.html.twig' %}

{% block title %}Program
{% endblock %}

{% block body %}
	<h1>Program</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ program.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ program.title }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ program.synopsis }}</td>
			</tr>
			<tr>
				<th>Poster</th>
				<td>{{ program.poster }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex justify-content-between  align-items-center">
		<a class="btn btn-outline-secondary my-3 form-btn" href="{{ path('program_app_program_index') }}">back to list</a>
		<a class="btn btn-outline-light my-3 form-btn" href="{{ path('program_app_program_edit', {'slug': program.slug}) }}">edit</a>

		{{ include('program/_delete_form.html.twig') }}
	</div>
{% endblock %}
