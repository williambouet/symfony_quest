{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}

	<div class="container">
		<h1>Tous les épisodes</h1>
		<div class="row justify-content-center g-3">
			{% for program in programs %}
				<div class="col-4">
					<div class="card my-3 h-100">
						<img src="{{ vich_uploader_asset(program) }}" class="card-img-top" alt="Une image du programme {{ program.poster }}">
						<div class="card-body">
							<div class="h-100 d-flex flex-column justify-content-between">
								<div class="d-flex justify-content-between">
                                        <p class="text-secondary">Catégorie :
                                            {{ program.category.name }}</p>
									<div class="d-flex">
									<p class="text-secondary" >Saison :
									{% for season in program.seasons %}
										{{season.number}}
									{% endfor %}
									</p>
									</div>

								</div>
								<h2 class="card-title">{{ program.title }}</h2>
								<div>
									<p>Synopsis de la saison :</p>
									<p>{{ program.synopsis }}</p>
								</div>
								<div
									class="d-flex justify-content-between">
									<a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-dark">Voir les épisodes</a>
									<a href="{{ path("program_show", { id: program.id }) }}"  class="btn btn-outline-secondary">Retour</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				Aucun épisode trouvé.
			{% endfor %}
		</div>
	</div>
{% endblock %}
