{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>Episode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td class="align-middle">{{ episode.id }}</td>
                <td class="align-middle">{{ episode.title }}</td>
                <td class="align-middle">{{ episode.number }}</td>
                <td class="align-middle lh-lg fw-light m-1">{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-outline-success w-100 my-1"  href="{{ path('app_episode_show', {'id': episode.id}) }}">show</a>
                    <a class="btn btn-outline-warning w-100 my-1" href="{{ path('app_episode_edit', {'id': episode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_episode_new') }}">Create new</a>
{% endblock %}
