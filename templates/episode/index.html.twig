{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-5">
    <h1 clas="">Administrer les Ã©pisodes</h1>
    <a class="btn btn-outline-light m-2 add-btn form-btn" href="{{ path('app_episode_new') }}">Ajouter</a>
</div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td class="align-middle">{{ episode.id }}</td>
                <td class="align-middle">{{ episode.title }}</td>
                <td class="align-middle">{{ episode.number }}</td>
                <td class="align-middle lh-lg fw-light m-1">{{ episode.synopsis }}</td>
                <td class="d-flex flex-column align-content-end">
                    <a class="btn btn-outline-success form-btn my-1"  href="{{ path('app_episode_show', {'slug': episode.slug}) }}">show</a>
                    <a class="btn btn-outline-warning form-btn my-1" href="{{ path('app_episode_edit', {'slug': episode.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
