{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
	<h1>Season</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ season.id }}</td>
			</tr>
			<tr>
				<th>Number</th>
				<td>{{ season.number }}</td>
			</tr>
			<tr>
				<th>Year</th>
				<td>{{ season.year }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ season.description }}</td>
			</tr>
		</tbody>
	</table>


	<div class="d-flex justify-content-between  align-items-center">
		<a class="btn btn-outline-secondary my-3" href="{{ path('app_season_index') }}">Retour</a>
		<a class="btn btn-outline-dark my-3" href="{{ path('app_season_edit', {'id': season.id}) }}">Modifier</a>

		{{ include('season/_delete_form.html.twig') }}
	</div>
{% endblock %}
