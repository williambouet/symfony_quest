{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-5">
    <h1>Administrer les catégories</h1>
    <a class="btn btn-outline-light m-2 add-btn form-btn" href="{{ path('category_app_category_new') }}">Ajouter</a>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="">
                <td class="align-middle">{{ category.id }}</td>
                <td class="align-middle">{{ category.name }}</td>
                <td>
                    <a class="btn btn-outline-success my-1 form-btn" href="{{ path('category_app_category_show', {'id': category.id}) }}">show</a>
                  <a class="btn btn-outline-warning my-1 form-btn" href="{{ path('category_app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Données vides</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
