{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<h1>Réinitialisation du mot de passe de connexion</h1>
	<div class="row justify-content-center mt-5">
		<div class="col-4 ">
			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small>
					Entrez votre adresse email afin de recevoir un lien de réinitialisation.
				</small>
			</div>

			<button class="btn btn-light">Envoyer le lien</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
